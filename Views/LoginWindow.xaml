<Window x:Class="MessengerApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в Messenger" Height="400" Width="460" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
  <Border Background="{StaticResource PanelBrush}" CornerRadius="12" Padding="18" Margin="18">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <StackPanel Grid.Row="0" Margin="4">
        <TextBlock Text="Messenger" FontSize="24" FontWeight="Bold" Margin="2" />
        <TextBlock Text="Войдите в аккаунт или создайте новый" Foreground="{StaticResource MutedBrush}" Margin="2,6,0,0"/>
      </StackPanel>

      <Border Grid.Row="1" Background="{StaticResource BgBrush}" CornerRadius="8" Padding="16" Margin="0,12,0,0">
        <StackPanel>
          <TextBlock Text="Имя пользователя" Margin="0,0,0,6" />
          <TextBox x:Name="UsernameBox" Height="40"/>

          <TextBlock Text="Пароль" Margin="0,12,0,6" />
          <PasswordBox x:Name="PasswordBox" Height="40"/>

          <TextBlock x:Name="ErrorText" Foreground="#FFF87171" Visibility="Collapsed" Margin="0,8,0,0"/>

          <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
            <Button x:Name="RegisterBtn" Content="Зарегистрироваться" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0" />
            <Button x:Name="LoginBtn" Content="Войти" Style="{StaticResource PrimaryButton}" Width="110"/>
          </StackPanel>
        </StackPanel>
      </Border>
    </Grid>
  </Border>
</Window>
