<Window x:Class="MessengerApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="380" Width="420" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="{DynamicResource BgBrush}">
  <Grid Margin="18">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Margin="0,0,0,12">
      <TextBlock Text="Messenger" FontSize="22" FontWeight="Bold" Foreground="White"/>
      <TextBlock Text="Войдите в аккаунт или зарегистрируйтесь" Foreground="{DynamicResource TextMutedBrush}" FontSize="12"/>
    </StackPanel>

    <Border Grid.Row="1" Background="{DynamicResource PanelBrush}" Padding="12" CornerRadius="8">
      <StackPanel>
        <TextBlock Text="Имя пользователя" Foreground="White" Margin="0,0,0,4"/>
        <TextBox x:Name="UsernameBox" Height="36"/>

        <TextBlock Text="Пароль" Foreground="White" Margin="8,8,0,4"/>
        <PasswordBox x:Name="PasswordBox" Height="36"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
          <Button x:Name="RegisterBtn" Content="Зарегистрироваться" Style="{StaticResource PrimaryButton}" Width="140" Margin="0,0,8,0"/>
          <Button x:Name="LoginBtn" Content="Войти" Background="{DynamicResource AccentBrush}" Foreground="White" Width="100"/>
        </StackPanel>

        <TextBlock x:Name="ErrorText" Foreground="#FFF87171" Margin="0,12,0,0" Visibility="Collapsed"/>
      </StackPanel>
    </Border>
  </Grid>
</Window>
