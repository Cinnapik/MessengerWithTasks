<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Палитра -->
  <Color x:Key="BgColor">#FF071024</Color>
  <Color x:Key="PanelColor">#FF0B1220</Color>
  <Color x:Key="Accent">#FF3B82F6</Color>
  <Color x:Key="SendAccent">#FF10B981</Color>
  <Color x:Key="BubbleOther">#FF1F2937</Color>
  <Color x:Key="TextMuted">#FF9CA3AF</Color>

  <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}" />
  <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
  <SolidColorBrush x:Key="SendBrush" Color="{StaticResource SendAccent}" />
  <SolidColorBrush x:Key="BubbleOtherBrush" Color="{StaticResource BubbleOther}" />
  <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}" />

  <!-- Общие стили -->
  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource BgBrush}" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="FontFamily" Value="Segoe UI" />
  </Style>

  <Style TargetType="TextBox">
    <Setter Property="Background" Value="#FF0F1720"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="8"/>
  </Style>

  <Style TargetType="ListBox">
    <Setter Property="Background" Value="{StaticResource PanelBrush}" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

  <!-- Базовый стиль кнопки с шаблоном для закруглённой визуальной кнопки -->
  <Style x:Key="RoundedButtonBase" TargetType="Button">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- PrimaryButton наследует RoundedButtonBase -->
  <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource RoundedButtonBase}">
    <Setter Property="Background" Value="{StaticResource AccentBrush}" />
  </Style>

  <!-- SendButton — чуть больший вариант -->
  <Style x:Key="SendButton" TargetType="Button" BasedOn="{StaticResource RoundedButtonBase}">
    <Setter Property="Background" Value="{StaticResource SendBrush}" />
    <Setter Property="Width" Value="84" />
    <Setter Property="Height" Value="48" />
  </Style>

</ResourceDictionary>
