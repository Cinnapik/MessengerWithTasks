<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Палитра: спокойная тёмная тема -->
  <Color x:Key="BgColor">#0C0F14</Color>
  <Color x:Key="Panel">#0F1720</Color>
  <Color x:Key="Sidebar">#0B1218</Color>
  <Color x:Key="Accent">#60A5FA</Color>
  <Color x:Key="AccentMuted">#2B6CB0</Color>
  <Color x:Key="SendColor">#34D399</Color>
  <Color x:Key="MineBubble">#163A3A</Color>
  <Color x:Key="OtherBubble">#1F2A37</Color>
  <Color x:Key="MutedText">#9AA5B1</Color>
  <Color x:Key="Border">#1F2A36</Color>

  <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}" />
  <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource Panel}" />
  <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource Sidebar}" />
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
  <SolidColorBrush x:Key="AccentMutedBrush" Color="{StaticResource AccentMuted}" />
  <SolidColorBrush x:Key="SendBrush" Color="{StaticResource SendColor}" />
  <SolidColorBrush x:Key="MineBubbleBrush" Color="{StaticResource MineBubble}" />
  <SolidColorBrush x:Key="OtherBubbleBrush" Color="{StaticResource OtherBubble}" />
  <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedText}" />
  <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}" />

  <!-- Общие -->
  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource BgBrush}" />
    <Setter Property="Foreground" Value="#F1F5F9" />
    <Setter Property="FontFamily" Value="Segoe UI, Arial" />
  </Style>

  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="#F1F5F9"/>
  </Style>

  <!-- Базовый закруглённый шаблон кнопки -->
  <Style x:Key="RoundedButton" TargetType="Button">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="Background" Value="{StaticResource AccentMutedBrush}"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="border" Property="Opacity" Value="0.95"/></Trigger>
            <Trigger Property="IsPressed" Value="True"><Setter TargetName="border" Property="Opacity" Value="0.85"/></Trigger>
            <Trigger Property="IsEnabled" Value="False"><Setter TargetName="border" Property="Opacity" Value="0.5"/></Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
  </Style>

  <Style x:Key="SendButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
    <Setter Property="Background" Value="{StaticResource SendBrush}"/>
    <Setter Property="Width" Value="96"/>
    <Setter Property="Height" Value="48"/>
  </Style>

  <!-- Поля ввода -->
  <Style x:Key="InputBox" TargetType="TextBox">
    <Setter Property="Background" Value="#0E1519"/>
    <Setter Property="Foreground" Value="#F1F5F9"/>
    <Setter Property="Padding" Value="10"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>
  <Style TargetType="TextBox" BasedOn="{StaticResource InputBox}" />

  <Style x:Key="PwdBox" TargetType="PasswordBox">
    <Setter Property="Background" Value="#0E1519"/>
    <Setter Property="Foreground" Value="#F1F5F9"/>
    <Setter Property="Padding" Value="10"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>
  <Style TargetType="PasswordBox" BasedOn="{StaticResource PwdBox}" />

  <Style TargetType="ListBox">
    <Setter Property="Background" Value="{StaticResource SidebarBrush}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Foreground" Value="#F1F5F9"/>
  </Style>

  <!-- Тэг -->
  <Style x:Key="TagBadge" TargetType="Border">
    <Setter Property="Background" Value="#1B2833"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="6,3"/>
    <Setter Property="Margin" Value="4,2,4,2"/>
  </Style>

  <!-- Минимальная стилизация прокрутки -->
  <Style TargetType="ScrollViewer">
    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
  </Style>

</ResourceDictionary>
